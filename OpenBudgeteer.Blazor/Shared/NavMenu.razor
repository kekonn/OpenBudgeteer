@using OpenBudgeteer.Core.Common.Database
@using Microsoft.EntityFrameworkCore
@using Microsoft.Extensions.DependencyInjection
@using OpenBudgeteer.Core.Services
@inject DbContextOptions<DatabaseContext> DbContextOptions
@inject IServiceProvider Services

<nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
    <div class="row" style="width: 1500px; margin: auto">
        <div class="col-md-auto">
            <a class="navbar-brand" href="#">OpenBudgeteer</a>
        </div>
        <div class="col">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                        <span class="oi oi-home" aria-hidden="true"></span> Home
                    </NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="account">
                        <span class="oi oi-credit-card" aria-hidden="true"></span> Account
                    </NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="transaction">
                        <span class="oi oi-transfer" aria-hidden="true"></span> Transaction
                    </NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="bucket">
                        <span class="oi oi-box" aria-hidden="true"></span> Bucket
                    </NavLink>
                </li>
                @if (BankConnectionsActive)
                {
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" id="importNavDropDown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                            <span class="oi oi-data-transfer-upload" aria-hidden="true"></span> Import
                        </a>
                        <div class="dropdown-menu" aria-labelledby="importNavDropDown">
                            <NavLink class="dropdown-item" href="import">
                                <span class="oi oi-data-transfer-upload" aria-hidden="true"></span> File Import
                            </NavLink>
                            <NavLink class="dropdown-item" href="import-cloud">
                                <span class="oi oi-cloud-download" aria-hidden="true"></span> PSD2 Import
                            </NavLink>
                        </div>
                    </li>
                }
                else
                {
                    <li class="nav-item">
                        <NavLink class="dropdown-item" href="import">
                            <span class="oi oi-data-transfer-upload" aria-hidden="true"></span> File Import
                        </NavLink>
                    </li>
                }
                <li class="nav-item">
                    <NavLink class="nav-link" href="report">
                        <span class="oi oi-bar-chart" aria-hidden="true"></span> Report
                    </NavLink>
                </li>
                <li class="nav-item">
                    <NavLink class="nav-link" href="rules">
                        <span class="oi oi-script" aria-hidden="true"></span> Rules
                    </NavLink>
                </li>
            </ul>
        </div>
        <div class="col-md-auto">
            <div class="navbar-text" style="margin-right: 15px">
                <span>
                    Database: @CurrentDatabase
                </span>
            </div>
        </div>
        <div class="col-md-auto">
            <div class="navbar-text">
                <span>
                    Version: 1.6 (<a href="https://github.com/TheAxelander/OpenBudgeteer/blob/master/CHANGELOG.md" target="_blank">Change Log</a>)
                </span>
            </div>
        </div>
    </div>
</nav>

@code {

    public string CurrentDatabase => new DatabaseContext(DbContextOptions).Database.GetDbConnection().Database;

    public bool BankConnectionsActive => Services.GetServices<IBankConnectionService>().Any();
}